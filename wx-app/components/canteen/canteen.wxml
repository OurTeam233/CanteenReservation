<!--components/canteen/canteen.wxml-->
<van-card
    title="一食堂第二窗口"
    thumb="{{ propertyImageURL }}"
    title-class="title-class"
    custom-class="custom-class"
    thumb-link="{{propertyNavUrl}}"
    lazy-load
>
  <view slot="desc" class="desc-class">
    <view class="description-1">
      <view>
        <van-icon name="star" color="orange"/> {{propertyScore}}
      </view>
      <text>月售{{propertySales}}</text>
    </view>
    <view class="description-2">
      <van-tag mark type="warning">{{description}}</van-tag>
      <text>人均{{propertyPerCost}}￥</text>
    </view>
  </view>
  <view slot="bottom" class="tags-group">
    <van-tag type="danger"
             plain
             wx:for="{{propertyTagList}}"
             wx:key="*this"
             custom-class="tags"
    >{{item}}</van-tag>
  </view>
</van-card>
