.components-wrapper {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 13rpx;
  margin-left: 13rpx;
  font-size: 20rpx;
}
.components-wrapper .image-wrapper {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-left: 20rpx;
}
.components-wrapper .info-wrapper {
  box-sizing: border-box;
  flex: 7;
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 10rpx 15rpx;
}
.components-wrapper .info-wrapper .title {
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.components-wrapper .info-wrapper .middle-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.components-wrapper .info-wrapper .middle-wrapper .sell-number {
  color: #4d4d4d;
}
.components-wrapper .info-wrapper .bottom-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.components-wrapper .info-wrapper .bottom-wrapper .vip-prices {
  color: red;
  font-size: 23rpx;
}
