/* pages/logs/log.wxss */
page {
  width: 100%;
  height: 100%;
}
.main {
  width: 100%;
  height: 100%;
  position: relative;
  background: #fff;
}
.main .logo {
  position: absolute;
  top: 10vh;
  right: 50%;
  transform: translate(50%, 0);
}
.main .input-wrapper {
  width: 85%;
  position: absolute;
  top: 25vh;
  right: 50%;
  transform: translate(50%, 0);
}
.main .box {
  width: 604rpx;
  height: 252rpx;
  position: absolute;
  top: 50vh;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.main .box .log {
  width: 604rpx;
  height: 82rpx;
  margin: auto;
  position: relative;
}
.main .box .log .wechat {
  width: 42rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 138rpx;
  z-index: 99;
}
.main .box .log .logBtn {
  width: 600rpx;
  background: #43ae3d;
  height: 84rpx;
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 84rpx;
}
.main .box .log .logBtn:after {
  border: 2px solid #009000;
}
