<!--pages/community/index.wxml-->
<view class="top-tabBar-wrapper">
  <van-tabs active="{{ active }}"
            bind:change="changePage"
            sticky
            swipeable
            line-width="130rpx"
  >
    <van-tab title="浏览"
    >
      <view class="card-wrapper">
        <card class="card" wx:for="{{3}}"></card>
      </view>
    </van-tab>
    <van-tab title="表白墙">
      表白墙
    </van-tab>
    <van-tab title="寻物屋">
      <view class="search-search">
        <view class="search-button-find">寻物启事</view>
        <view class="search-button-search">失物招领</view>
        <view class="search-wrapper">
          <van-search
              value="{{ value }}"
              placeholder="请输入搜索关键词"
              use-action-slot
              bind:change="onChange"
              bind:search="onSearch"
              shape="round"
          >
            <view slot="action" bind:tap="onClick">搜索</view>
          </van-search>
        </view>
      </view>
    </van-tab>
    <van-tab class="card" title="我的">
      <view class="card-wrapper">
        <card class="card" wx:for="{{3}}"></card>
      </view>
    </van-tab>
  </van-tabs>
</view>
