.content {
  margin: 0 40rpx 300rpx;
}
.content .goods-list-wrapper .title {
  margin: 30rpx 0;
}
.content .goods-list-wrapper .all-goods-wrapper .title-wrapper {
  height: 45rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
}
.content .goods-list-wrapper .all-goods-wrapper .goods-card {
  margin: 10rpx 0;
}
.content .goods-list-wrapper .all-goods-wrapper .goods-card .stepper {
  float: right;
  display: inline;
}
.content .appointment-time-wrapper .title {
  margin: 30rpx 0;
}
.content .appointment-time-wrapper .select-time {
  background-color: #fcf7f7;
  padding: 25rpx;
  border: 1rpx rgb(248, 235, 226) solid;
  border-radius: 2%;
  color: rgb(247, 86, 58);
}
.content .appointment-time-wrapper .select-time .date-time {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 25rpx;
}
.content .appointment-time-wrapper .select-time .time-time {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.content .input-class {
  margin: 30rpx 0;
}
.content .input-class .notes-title {
  margin: 30rpx 0;
}
.content .input-class .notes-input-class {
  height: 100rpx !important;
}
