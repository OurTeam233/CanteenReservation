<!--pages/appointment/index.wxml-->
<view class="content">
  <!--菜品详情-->
  <view class="goods-list-wrapper">
    <view class="title">菜品详情</view>
    <view class="all-goods-wrapper">
      <van-card
          custom-class="goods-card"
          price="10.00"
          desc="描述信息"
          title="商品标题"
          thumb="{{ imageURL }}"
          wx:for="{{20}}"
      >
        <view slot="num" class="stepper">
          <van-stepper value="{{ 0 }}" disable-input
                       long-press="{{ false }}"
                       input-class="number-input-class"
                       bind:change="onChange"
                       theme="round"
                       button-size="34rpx"
          />
        </view>
      </van-card>
    </view>
  </view>

  <!--预约时间-->
  <view class="appointment-time-wrapper">
    <view class="title">预约时间</view>
    <view class="select-time"
          bind:tap="selectTime"
    >
      <view class="date-time">今天 ( {{currentYear}}-{{currentMonth}}-{{currentDay}} )</view>
      <view class="time-time">
        <view class="start-time">开始时间: {{startHour}} : {{startMin}}</view>
        <view class="end-time">结束时间: {{endHour}} : {{endMin}}</view>
      </view>

    </view>
  </view>

  <!--备注输入框-->
  <view class="input-class">
    <view class="notes-title">备注</view>
    <van-cell-group>
      <van-field
          value="{{ notesValue }}"
          type="textarea"
          maxlength="30"
          placeholder="请输入备注(不超过30字)"
          input-class="notes-input-class"
          bind:change="inputNotes"
      />
    </van-cell-group>
  </view>

  <!--底部栏-->
  <van-submit-bar
      price="{{ 3050 }}"
      button-text="提交预约"
      bind:submit="tapSubmit"
      custom-class="appointment-wrapper"
  >
    <van-button round type="warning">购买会员</van-button>
  </van-submit-bar>

  <!--弹出层-->
  <van-popup
      show="{{showSelectTime}}"
      round
      safe-area-inset-top
      position="bottom"
      custom-style="height: 44%"
      bind:close="closeSelectTime"
  >
    <view class="selected-time">
      <van-datetime-picker
          type="time"
          title="请选择开始时间"
          min-hour="{{currentHour}}"
          min-minute="{{currentMinute}}"
          formatter="{{ formatter }}"
          bind:confirm="tapConfirm"
          bind:cancel="closeSelectTime"
      />
    </view>
  </van-popup>
</view>



