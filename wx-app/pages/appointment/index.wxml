<!--pages/appointment/index.wxml-->
<view class="content">
  <!--菜品详情-->
  <view class="goods-list-wrapper">
    <view class="title">菜品详情</view>
    <view class="all-goods-wrapper">
      <van-card
          custom-class="goods-card"
          price="10.00"
          desc="描述信息"
          title="商品标题"
          thumb="{{ imageURL }}"
          wx:for="{{2}}"
      >
        <view slot="num" class="stepper">
          <van-stepper value="{{ 0 }}" disable-input
                       long-press="{{ false }}"
                       input-class="number-input-class"
                       bind:change="onChange"
                       theme="round"
                       button-size="34rpx"
          />
        </view>
      </van-card>
    </view>
  </view>

  <!--预约时间-->
  <view class="appointment-time-wrapper">
    <view class="title">预约时间</view>
    <view class="select-time"
          bind:tap="selectTime"
    >
      <text>今天 {{currentYear}}-{{currentMonth}}-{{currentDay}}</text>
      <text> |||||{{startHour}}:{{startMin}} ~ {{endDate.getHours()}}:{{endDate.getMinutes}}</text>
    </view>
  </view>

  <!--底部栏-->
  <van-submit-bar
      price="{{ 3050 }}"
      button-text="我选好了"
      bind:submit="tapSubmit"
      custom-class="appointment-wrapper"
  >
    <van-button round type="warning">购买会员</van-button>
  </van-submit-bar>
  <!--弹出层-->
  <van-popup
      show="{{showSelectTime}}"
      round
      safe-area-inset-top
      position="bottom"
      custom-style="height: 40%"
      bind:close="closeSelectTime"
  >
    <view class="selected-time">
      <van-datetime-picker
          type="time"
          title="请选择开始时间"
          value="{{ currentDate }}"
          min-hour="{{startHour}}"
          min-minute="{{ endHour }}"
          bind:input="onInput"
      />
    </view>
  </van-popup>
</view>



