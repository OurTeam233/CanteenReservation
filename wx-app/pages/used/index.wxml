<!--pages/miaipost/index.wxml-->
<view class="all">


  <!-- 自身信息 -->
  <view class="info">
    <input model:value="{{thingName}}" bindblur="thingName" placeholder="输入名称" class="name" />
    <van-divider />
    <textarea model:value="{{describle}}" class="describle" bindblur="describle" auto-height placeholder="物品描述" />
  </view>
 
  <!-- 添加图片开始 -->
  <view class="view_contain">
    <!-- 上传多张图片 -->
    <view class="ui_uploader_cell">
      <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
        <icon class='ui_uploader_item_icon' bindtap='clearImg_d' data-index="{{index}}" type="clear" size="20" color="red" />
        <image bindtap='showImg_d' data-index="{{index}}" src='{{item}}'></image>
      </view>
      <view class='ui_uploader' bindtap='choosePic_d' wx:if="{{showUpload}}">
      </view>
    </view>
    <van-divider contentPosition="center"></van-divider>
  </view>
  <!-- 添加图片结束 -->


  <!-- 价格 -->
  <view class="price">
    <image src="../../image/mine/restMoney.png" class="money"></image>
    <view class="moneyText">价格</view>
 
    <view class="allmoney">￥
      <input model:value="{{allMoney}}" class="priceLabel"  placeholder-style="color:#F76260"  placeholder="0.0" type="digit"  bindinput="getMoney"/>
    </view>

  </view>



  <button class="button-submit" bindtap="submit">上传</button>
</view>