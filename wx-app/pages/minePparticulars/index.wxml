<!--pages/minePparticulars/index.wxml-->
<van-notify id="van-notify" />
<view class="main">

  <!-- 还是背景图片 -->
  <image class='bg' src='../../image/mine/bg.png'></image>

  <!-- 个人信息 -->
  <view class="personInfo">
    <view class="personInfoTop">
      <view class="head">
        <image src="{{ headImgUrl }}"></image>
      </view>
      <view class="buttonGourp">
        <view class="msg" bindtap="toMsg">私信</view>
        <view class="list-att" bindtap="toAttention" data-id="{{thisPageStudentId}}">
          <view wx:if="{{isAtt}}" class="att" >已关注</view>
          <view wx:else class="no-att">+ 关注</view>
        </view>
        
        <!-- <view wx:if="{{myFollow.isFollow}}" class="att">已关注</view>
        <view class="no-att" wx:else>+ 关注</view> -->
      </view>
    </view>

    <view class="personInfoBotton">
      <view class="username">{{username}}</view>
      <view class="signature">{{signature}}</view>

    </view>
  </view>


  <view class="content">
    <van-tabs sticky swipeable  nav-class="title-tab" color="#f85119" title-active-color="#f85119" active="{{ item }}">


      <!-- 以下为发帖页面 -->
      <van-tab title="发帖">
        <!-- <include src="../posts/index.wxml" /> -->
        <!-- <van-empty description="什么都没有哦" /> -->

        <!-- 据说是某个大佬写的组件 -->
        <view class="header">
          <post proList="{{postList}}" proClickable="{{false}}"></post>
        </view>
        <van-empty description="Ta还没有发帖" wx:if="{{postList.length === 0}}" />
        

      </van-tab>


      <!-- 以下为二手页面 -->
      <van-tab  title="二手">
        <!-- <view class="goods-content">
          
        </view> -->

        <view class="container" wx:for="{{usedList}}" wx:key="{{id}}" wx:for-index='idx' >
          <view class="innercontainer {{item.del == 1 ? 'containerDel' : ''}}">
            <image class="previewimg" src="{{item.pictures[0]}}" bindtap="previewImage" data-index="{{idx}}"></image>
            <view class="goods-info">
              <view class="goods-title">
                <view class="goods-name">{{item.name}}</view>
                <image src="../../image/mine/sold.svg" wx:if="{{item.del == 0 && isMyPage}}" bindtap="delUsed" data-id="{{item.id}}"></image>
              </view>
              
              <view class="goods-description">{{item.description}}</view>
              <view class="goods-value">¥ <span>{{item.price}}</span></view>
            </view>
          </view>
        </view>

        <van-empty description="Ta还没有二手" wx:if="{{usedList.length === 0}}" />

      </van-tab>


      <!-- 以下为相亲页面 -->
      <van-tab  title="相亲">
        <view class="content-miai" wx:if="{{haveMiai}}">
          <!-- 信息卡片 -->
          <view class="content-miai-box1">
            <!-- 图片 -->
            <view class="content-miai-swiper">
              <swiper indicator-dots autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <view wx:for="{{backgroundImage}}" wx:for-item="item">
                  <swiper-item>
                    <image class="content-miai-swiper-image" src="{{item}}" mode="aspectFill"></image>
                  </swiper-item>
                </view>
              </swiper>
            </view>
            <!-- 信息 -->
            <view class="content-miai-info-1">
              <image class="content-miai-info-image1" src="../../image/logo/like4.png"></image>
              <view class="content-miai-info-self-name">{{person.name}}</view>
              <view class="content-miai-info-self-info">
                {{person.age}} | {{person.sex}} | {{person.address}}
              </view>
              <image class="content-miai-info-image2" src="../../image/logo/like4.png"></image>
            </view>
            <!-- 头像 -->
            <!-- <view>
              <image class="content-miai-info-image3" src="../../image/headPhone/head2.webp"></image>
            </view> -->
          </view>
          <!-- 个人信息 -->
          <view class="content-miai-box2">
            <view class="content-miai-box-info1">个人信息</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/age.png"></image>年龄:{{person.age}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/sex.png"></image>性别:{{person.sex}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/height.png"></image>身高:{{person.height}}cm</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/weight.png"></image>体重:{{person.weight}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/hobby.png"></image>兴趣:{{person.hobby}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/address.png"></image>地址:{{person.address}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/laba.png"></image>宣言:{{person.manifesto}}</view>
          </view>
          <!-- 对方要求 -->
          <view class="content-miai-box2">
            <view class="content-miai-box-info1">理想型</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/age.png"></image>年龄:{{person1.age}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/sex.png"></image>性别:{{person1.sex}}</view>
            <view class="content-miai-box-info"><image class="content-miai-box-info-image"  src="../../image/information/height.png"></image>身高:{{person1.height}}</view>
            <view class="content-miai-box-info">其他条件:{{person1.condition}}</view>
          </view>

          <button class='delMiai' bindtap='delMiai' wx:if="{{isMyPage}}">删除相亲</button>


        </view>


        <van-empty description="Ta还没有相亲" wx:else />
      </van-tab>
    </van-tabs>

    

  </view>

</view>