<!--pages/minePparticulars/index.wxml-->

<view class="main">

  <!-- 还是背景图片 -->
  <image class='bg' src='../../image/mine/bg.png'></image>

  <!-- 个人信息 -->
  <view class="personInfo">
    <view class="personInfoTop">
      <view class="head">
        <image src="{{ headImgUrl }}"></image>
      </view>
      <view class="buttonGourp">
        <button>关注</button>
        <button>私信</button>
      </view>
    </view>

    <view class="personInfoBotton">
      <view class="username">{{username}}</view>
      <view class="signature">{{signature}}</view>

    </view>
  </view>

  <!-- 标签栏 -->

  <view class="tab">
  <view class="tab-item {{item==0?'active':''}}" bindtap="changeItem" data-item="0">发帖</view>
  <view class="tab-item {{item==1?'active':''}}" bindtap="changeItem" data-item="1">二手</view>
  <view class="tab-item {{item==2?'active':''}}" bindtap="changeItem" data-item="2">相亲</view>
</view>

  <swiper current="{{item}}" bindchange="changeTab">
    
    <swiper-item >
      <include src="info.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="play.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="dateInfo.wxml" />
    </swiper-item>
  </swiper>
</view>