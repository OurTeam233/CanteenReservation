/* pages/minePparticulars/index.wxss */

page{
  background-color: #fff;
}

/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }


/* 背景图片 */
.bg{
  width: 100%;
  height: 600rpx;
  position: absolute;
  z-index: -1;
}

/* 顶部个人信息 */
.personInfo{
  /* background-color: #ccc; */
  width: 90%;
  height: 430rpx;
  margin: auto;
  border-bottom: 1px #ccc solid;
  /* display: flex; */

}

/* 顶部个人信息的上面一部分 */
.personInfoTop{
  display: flex;

}

/* 头像框 */
.head {
  border-radius: 50px;
  width:160rpx;
  height:160rpx;
  margin: 20rpx 4rpx;
  background-color: #fff;
  margin-top: 120rpx;
}

.head > image{
  border-radius: 50px;
  width:160rpx;
  height:160rpx;
}

/* 头像旁的按钮组 */
.buttonGourp{
  width: 510rpx;
  /* background-color: #fff; */
  display: flex;
}

/* 按钮样式 */
.buttonGourp > button{
  margin-top: 210rpx;
  margin-left: 60rpx;
  margin-right: 10rpx;
  width: 180rpx;
  height: 80rpx;
  border-radius: 50rpx;
  
}

/* 用户名 */
.username {
  width: 380rpx;
  height: 36rpx;
  font-weight: 1000;
  font-size: 36rpx;
  color: #000;
  margin-top: 10rpx;
}
/* 个性签名 */
.signature{
  width: 180px;
  height: 20px;
  font-size: small;
  color: rgb(121, 121, 121);
  margin-top: 20rpx;

}


/* 中部标签页 */

/* 抄原来项目的 */
.content>swiper{
  height: 500rpx;
}

.content-miai{
  height: 500rpx;
}


.tab {
  margin-top: 20rpx;
  display: flex;
  height: 36px;
  justify-content:left;
  align-items: center;
  background-color: #fff;
}

.content-tab {
  margin-top: 20rpx;
  height: 36px;
  justify-content:left;
  align-items: center;
  background-color: #fff;
}

.tab-item{
  margin-top: 10rpx;
  margin-left: 40rpx;
  margin-right: 10rpx;
  font-size: 28rpx;

}


.active{
  font-size: 32rpx;
  color: #f85119;
  text-align: center;
}

.active::after {
  content: '';
  width: 50%;
  height: 1px;
  display: block;
  margin: 0 auto;
  border-bottom: 2px solid #f85119;
  padding: 1px;
}









